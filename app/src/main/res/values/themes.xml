<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FicTab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/indigo_500</item>-->
        <item name="colorPrimary">@color/sim_color</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->

        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/bar_color_dark</item>
        <item name="android:fontFamily">@font/verdana</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <style name="ThemeOverlay.ActionBar" parent="">
        <item name="colorPrimary">@color/bar_color</item>
    </style>
</resources>